<h1>Posts en favori</h1>
<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @favorites.each do |post| %>
  <div class="col">
    <div class="card">
      <div class="card-header">
        <%if post.post.illustration.url%> <%= image_tag post.post.user.illustration.url,
        class: "", width: "50px"%>
        <span class="float-end"><%= post.user.name.upcase %></span>
        <%else%>
        <p></p>
        <%end%>
      </div>
      <div class="card-body">
        <%= image_tag post.post.illustration.url, class: "card-img-top", height:
        "300px" %>

        <p class="card-text"><%= post.post.description %></p>
      </div>
      <div class="card-footer clearfix">
        <small class="text-muted" style="float: right"
          ><%= post.created_at %></small
        >

        <%if post.post.user == current_user %>
        <p class="text-center d-block">
          <%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning
          text-dark" %>
        </p>
        <p>
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Etes-vous sÃ»r?' }, class: "btn btn-danger text-light" %>
        </p>
        <% else %>
        <p></p>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
