<p id="notice"><%= notice %></p>

<h1 class="mb-4">Les Posts publiés</h1>

<div class = 'row'>

   <% @posts.each do |post| %>
    <div class ='table-responsive col-6 mb-4'>
      <table class = "table table-striped table-hover border" >
        <thead>
          <tr>
            <th>Description</th>
            <th>Posté par</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
        
            <tr>
              <td><%= truncate(post.description, length: 9) %></td>
              <td><%= post.user.name %></td>

               <td>
                <a href = "<%= post_path(post.id)%>" class="btn btn-primary">Show</a>
              </td>

              <% if post.user == current_user %>
              <td>
                <a href = "<%= edit_post_path(post.id)%>" class="btn btn-warning">Edit</a>
              </td>
              <td>
                <a href = "<%= post_path(post.id)%>" class="btn btn-danger" data-confirm="Etes-vous surs?" data-method="DELETE">Destroy</a>
              </td>
              <% end %>
            </tr>
        
        </tbody>
      </table>
    </div>
   <% end %>
</div>

<div class="form-actions mb-5">
    <a href = "<%= new_post_path %>" class="btn btn-primary"> Ajouter un Post</a>
</div> <br>